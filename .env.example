## Kafka
# Comma-separated bootstrap servers (local Kafka or Confluent Cloud)
KAFKA_BOOTSTRAP=localhost:9092
# Target topic for raw measurements
KAFKA_TOPIC=airquality.raw
# Optional SASL/SASL_SSL configuration (e.g. Confluent Cloud)
KAFKA_SECURITY_PROTOCOL=SASL_SSL
KAFKA_SASL_MECHANISM=PLAIN
KAFKA_SASL_USERNAME=your_confluent_api_key
KAFKA_SASL_PASSWORD=your_confluent_api_secret

## Producer loop
# Use live national APIs (DE/NL/PL) instead of synthetic data
PIPELINE_LIVE_API=true
# Pause between polling cycles (seconds)
PIPELINE_SLEEP_SECONDS=300

## Postgres catalog (optional)
# Used for reading station metadata (coordinates, names) when available.
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=airquality
POSTGRES_USER=airuser
POSTGRES_PASSWORD=airpassword
# Optional SSL mode (e.g. 'require' for managed services like Supabase)
POSTGRES_SSLMODE=

## Germany - UBA
PIPELINE_DE_BASE_URL=https://www.umweltbundesamt.de/api/air_data/v2
# Comma-separated station ids, or leave empty to use DB catalog
PIPELINE_DE_STATIONS=1250

## Netherlands - Luchtmeetnet
PIPELINE_NL_BASE_URL=https://iq.luchtmeetnet.nl/open_api

## Poland - GIOS
PIPELINE_PL_BASE_URL=https://api.gios.gov.pl/pjp-api/v1/rest
# Optional fixed sensors: sensor_id:pollutant:station_id (comma-separated)
# Example (Warsaw station 114):
PIPELINE_PL_SENSORS=642:no2:114,644:o3:114,643:nox:114,641:no:114

## Feature toggles
PIPELINE_DISABLE_DE=false
PIPELINE_DISABLE_NL=false
PIPELINE_DISABLE_PL=false
PIPELINE_PL_ONLY_AUTO=true

